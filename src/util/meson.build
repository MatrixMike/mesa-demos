files_libutil = [
  'gl_wrap.h',
  'glut_wrap.h',
  'readtex.c',
  'readtex.h',
  'showbuffer.c',
  'showbuffer.h',
  'trackball.c',
  'trackball.h',
  # TODO: these are not included in cmake, but glut is always included?
  'shaderutil.c',
  'shaderutil.h',
]

libutil = static_library(
  'util',
  files_libutil,
  dependencies : [dep_glu, dep_epoxy, dep_glut],
  sources : epoxy.get_variable('epoxy_headers'),
)

inc_util = include_directories('.')

dep_util = declare_dependency(
  link_with : libutil,
  dependencies : [dep_epoxy, dep_glu, dep_glut],
  include_directories : inc_util,
)
