libperf = static_library(
  'perf',
  ['common.c', 'common.h', 'glmain.c', 'glmain.h'],
  dependencies : [dep_glut, dep_glew],
  include_directories : inc_util,
)

executables = [
  'copytex',
  'drawoverhead',
  'fbobind',
  'fill',
  'genmipmap',
  'readpixels',
  'swapbuffers',
  'teximage',
  'vbo',
  'vertexrate',
]
foreach e : executables
  executable(
    e,
    e + '.c',
    link_with : libperf,
    dependencies : [dep_gl, dep_glu, dep_glew, dep_glut, dep_m],
    include_directories : inc_util,
    install : true
  )
endforeach

executable(
  'glsl-compile-time',
  'glsl-compile-time.c',
  dependencies : [dep_util, dep_glew, dep_m],
  install : true
)
executable(
  'glslstateschange',
  'glslstateschange.c',
  dependencies : [dep_util, dep_glew, dep_m],
  link_with: libperf,
  install : true
)
